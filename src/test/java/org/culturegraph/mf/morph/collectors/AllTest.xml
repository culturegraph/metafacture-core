<?xml version="1.0" encoding="UTF-8"?>
<metamorph-test version="1.0"
	xmlns="http://www.culturegraph.org/metamorph-test" xmlns:mm="http://www.culturegraph.org/metamorph"
	xmlns:cgxml="http://www.culturegraph.org/cgxml">

	<test-case name="should fire only if all elements fire">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data1" value="A" />
						<cgxml:literal name="data2" value="B" />
					</cgxml:record>
					<cgxml:record id="2">
						<cgxml:literal name="data2" value="C" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:all>
						<mm:data source="data1" />
						<mm:data source="data2" />
					</mm:all>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="" value="true" />
					</cgxml:record>
					<cgxml:record id="2">
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="should support user-defined name and value">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data1" value="A" />
						<cgxml:literal name="data2" value="B" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:all name="ALL" value="found all">
						<mm:data source="data1" />
						<mm:data source="data2" />
					</mm:all>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="ALL" value="found all" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="should fire again if a value changes and reset is false">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:entity name="entity">
							<cgxml:literal name="data1" value="A" />
							<cgxml:literal name="data2" value="B" />
						</cgxml:entity>
						<cgxml:entity name="entity">
							<cgxml:literal name="data2" value="C" />
						</cgxml:entity>
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:all>
						<mm:data source="entity.data1" />
						<mm:data source="entity.data2" />
					</mm:all>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="" value="true" />
						<cgxml:literal name="" value="true" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="should not fire again if only one value changes and reset is true">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:entity name="entity">
							<cgxml:literal name="data1" value="A" />
							<cgxml:literal name="data2" value="B" />
						</cgxml:entity>
						<cgxml:entity name="entity">
							<cgxml:literal name="data2" value="B" />
						</cgxml:entity>
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:all reset="true">
						<mm:data source="entity.data1" />
						<mm:data source="entity.data2" />
					</mm:all>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="" value="true" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="should not fire if flushing an incomplete collection">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:entity name="entity">
							<cgxml:literal name="data1" value="A" />
						</cgxml:entity>
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:all flushWith="entity">
						<mm:data source="entity.data1" />
						<mm:data source="entity.data2" />
					</mm:all>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="should fire only if all elements fire + should return value from data1">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data1" value="A" />
						<cgxml:literal name="data2" value="B" />
					</cgxml:record>
					<cgxml:record id="2">
						<cgxml:literal name="data2" value="C" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:all value="${data1var}">
						<mm:data name="data1var" source="data1" />
						<mm:data name="data2var" source="data2" />
					</mm:all>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="" value="A" />
					</cgxml:record>
					<cgxml:record id="2">
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="should fire only if all elements fire + should return value from data2">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data1" value="A" />
						<cgxml:literal name="data2" value="B" />
					</cgxml:record>
					<cgxml:record id="2">
						<cgxml:literal name="data2" value="C" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:all value="${data2var}">
						<mm:data name="data1var" source="data1" />
						<mm:data name="data2var" source="data2" />
					</mm:all>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="" value="B" />
					</cgxml:record>
					<cgxml:record id="2">
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

</metamorph-test>
